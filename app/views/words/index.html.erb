<div>
    <%= search_form_for @q do |f| %>
    <%= f.label :日本語 %>
    <%= f.search_field :japanese_cont %>
    <%= f.submit %>
    <% end %>
    <input type="button" class="btn btn-primary" value="新規作成" onclick="gate();">
</div>
<table border="1" width = "600" bordercolor= "#000000" cellpadding="5">
    <tr bgcolor = "#9DCCE0">
        <td>［日本語］</td><td>［品詞］</td><td>［タイ語］</td><td>［口語/文語］</td><td>［備考］</td>
    </tr>
    <% @words.each do |word| %>
    <tr>
        <td><%= word.japanese %></td>
        <td><%= word.part_of_speech %></td>
        <td><%= word.thai %></td>
        <td><%= word.verbal_system %></td>
        <td><%= word.remarks %></td>
    </tr>
    <% end %>
</table>



<script type="text/javascript">
   function gate() {
      var UserInput = prompt("パスワードを入力して下さい:","");
      location.href = UserInput ;
   }
</script>
